seq(from=1,to=10,by=3)#根据间隔长度 分
seq(from=0,to=100,length.out = 5) #根据分割段数 分
rep(2,times=5)
rep(c(2,3),each=3)
rep(c(2,3),3)
sample(1:10,5,replace = T)
